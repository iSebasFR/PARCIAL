@{
    ViewData["Title"] = "Inicio";
}

<style>
    .welcome-container {
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
        padding: 3rem 1rem;
    }

    .welcome-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 1.5rem;
        font-size: 2.5rem;
    }

    .welcome-subtitle {
        color: #3498db;
        font-size: 1.25rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .welcome-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        padding: 3rem 2rem;
        margin-top: 1rem;
    }

    .welcome-icon {
        font-size: 4rem;
        color: #3498db;
        margin-bottom: 1.5rem;
    }

    .feature-list {
        text-align: left;
        max-width: 400px;
        margin: 2rem auto 0;
    }

    .feature-item {
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        padding: 0.5rem 0;
    }

    .feature-item i {
        color: #27ae60;
        margin-right: 10px;
        font-size: 1.1rem;
    }

    .feature-text {
        color: #495057;
        font-size: 1rem;
    }

    .instruction-text {
        color: #6c757d;
        font-style: italic;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e9ecef;
    }

    @@media (max-width: 768px) {
        .welcome-card {
            padding: 2rem 1.5rem;
        }
        
        .welcome-title {
            font-size: 2rem;
        }
        
        .welcome-icon {
            font-size: 3rem;
        }
    }
</style>

<div class="welcome-container">
    <div class="welcome-card">
        <div class="welcome-icon">
            <i class="fas fa-graduation-cap"></i>
        </div>
        <h1 class="welcome-title">Bienvenido al Portal Académico</h1>
        <p class="welcome-subtitle">Tu plataforma educativa integral para el éxito académico</p>
        
        <div class="feature-list">
            <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <span class="feature-text">Acceso a todos tus cursos matriculados</span>
            </div>
            <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <span class="feature-text">Seguimiento de tu progreso académico</span>
            </div>
            <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <span class="feature-text">Materiales de estudio organizados</span>
            </div>
            <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <span class="feature-text">Comunicación directa con profesores</span>
            </div>
        </div>
        
        <div class="instruction-text">
            <p class="mb-0">Selecciona una opción del menú superior para comenzar</p>
        </div>
    </div>
</div>