@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    .user-nav {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .user-welcome {
        color: #e9ecef !important;
        font-weight: 500;
        display: flex;
        align-items: center;
        padding: 0.5rem 0;
    }

    .user-welcome i {
        margin-right: 0.5rem;
        color: #3498db;
    }

    .nav-divider {
        color: #7f8c8d;
        margin: 0 0.5rem;
    }

    .btn-logout {
        background: transparent;
        border: 1px solid #e74c3c;
        color: #e74c3c !important;
        border-radius: 6px;
        padding: 0.375rem 0.75rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-logout:hover {
        background: #e74c3c;
        color: white !important;
        transform: translateY(-1px);
    }

    .btn-login {
        background: linear-gradient(135deg, #3498db, #2980b9);
        border: none;
        border-radius: 6px;
        color: white !important;
        padding: 0.5rem 1rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-login:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(52, 152, 219, 0.3);
        color: white !important;
    }

    .btn-register {
        background: transparent;
        border: 1px solid #e9ecef;
        color: #e9ecef !important;
        border-radius: 6px;
        padding: 0.5rem 1rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-register:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white !important;
        transform: translateY(-1px);
    }

    .user-actions {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    @@media (max-width: 768px) {
        .user-nav {
            flex-direction: column;
            gap: 0.5rem;
            width: 100%;
            margin-top: 1rem;
        }

        .user-welcome {
            justify-content: center;
            text-align: center;
        }

        .nav-divider {
            display: none;
        }

        .user-actions {
            width: 100%;
            justify-content: center;
        }

        .btn-login,
        .btn-register {
            width: 100%;
            text-align: center;
        }
    }
</style>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <div class="user-nav">
            <span class="user-welcome">
                <i class="fas fa-user-circle"></i>Hola, @User.Identity?.Name!
            </span>
            <span class="nav-divider">|</span>
            <div class="user-actions">
                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    <i class="fas fa-cog me-1"></i>Mi Cuenta
                </a>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn-logout">
                        <i class="fas fa-sign-out-alt me-1"></i>Cerrar Sesión
                    </button>
                </form>
            </div>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <div class="user-actions">
            <a class="btn-register" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-user-plus me-1"></i>Registrarse
            </a>
            <a class="btn-login" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt me-1"></i>Iniciar Sesión
            </a>
        </div>
    </li>
}
</ul>